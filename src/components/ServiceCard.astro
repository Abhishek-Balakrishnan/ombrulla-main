---
interface Props {
    index: number;
    title: string;
    subTitle: string;
    imgUrl: string;
    features: Feature[];
}

interface Feature {
    feature: string;
    details: string;
}

const { index, title, subTitle, features, imgUrl } = Astro.props;
const alignment =
    index % 2 ? `md:flex-row-reverse md:h-screen` : `md:flex-row md:h-screen `;
const firstImageMargin = index % 2 ? `-ml-10 bg-white` : `-mr-5`;
---

<div class=`flex flex-col ${alignment} lg:h-screen px-[15vw] my-16 md:my-20 xl:my-0`>
    <div class="md:basis-1/2 flex flex-col">
        <div class="flex md:items-baseline">
            <svg
                xmlns="http://www.w3.org/2000/svg"
                viewBox="0 0 24 24"
                fill="#0000FF"
                class="w-3 h-3"
            >
                <path
                    fill-rule="evenodd"
                    d="M4.5 7.5a3 3 0 013-3h9a3 3 0 013 3v9a3 3 0 01-3 3h-9a3 3 0 01-3-3v-9z"
                    clip-rule="evenodd"></path>
            </svg>
            <h3
                class="font-bold font-albert-sans text-4xl md:text-sm leading-4 ml-4 mb-5 lg:mb-3"
            >
                {subTitle}
            </h3>
        </div>
        <h2
            class="text-8xl md:text-5xl lg:text-4xl font-medium font-sans leading-tight mb-8 lg:mb-4"
        >
            {title}
        </h2>
        <ul
            class="list-disc text-gray-600 mx-4 space-y-4 mb-8 lg:mb-5 text-justify max-w-screen-md"
        >
            {
                features.map((d) => (
                    <li class="text-4xl leading-snug md:text-lg">
                        <span class="font-medium text-black">{d.feature}</span>:{" "}
                        {d.details}
                    </li>
                ))
            }
        </ul>
        <button
            class="bg-primary hover:bg-transparent
                text-5xl md:text-xl
                 text-white font-sans font-semibold hover:text-primary
                 p-5 leading-2 md:py-2 md:px-4
                 border border-primary hover:border-secondary
                 w-96 md:w-40 md:h-[3rem] rounded-full"
            aria-label="schedule call"
        >
            Schedule Call
        </button>
    </div>
    <div
        class="hidden md:show md:basis-1/2 md:flex items-start justify-center rounded-2xl lg:mx-4 xl:mx-0 xl:-ml-8"
    >
        <img
            src={imgUrl}
            alt={title}
            class="z-10 rounded-2xl md:h-full lg:h-full xl:h-3/5 w-max"
            width="24rem"
            height="12rem"
        />
    </div>
</div>